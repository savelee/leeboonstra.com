<article id="<%= post.layout %>-<%= post.slug %>" class="article row article-type-<%= post.layout %> row" itemprop="blogPosts" itemscope itemtype="http://schema.org/BlogPosting">
  <div class="col col-sm-9 article-inner">
    <%- partial('post/gallery') %>
    <% if (post.link || post.title){ %>
      <header class="article-header">
        <%- partial('post/title', {class_name: 'article-title'}) %>
        Posted on <%- partial('post/date', {class_name: 'article-date', date_format: null}) %>
        in <%- partial('post/category') %>
        <span class="hidden" itemprop="author">Lee Boonstra</span>
      </header>
    <% } %>
    <% if (post.excerpt && index){ %>
      <%- post.excerpt %>
      <% if (theme.excerpt_link){ %>
        <p class="article-more-link">
          <a role="button" class="btn btn-primary" href="<%- url_for(post.path) %>#more"><%= theme.excerpt_link %></a>
        </p>
      <% } %>
    <% } else { %>
      <%- post.content %>
    <% } %>
  </div>
  <% if (!index){ %>
    <%- partial('post/nav') %>
  <% } %>

<script type="application/ld+json">
  { "@context": "http://schema.org", 
  "@type": "BlogPosting",
  "headline": <%- post.title %>,
  "author": "Lee Boonstra", 
  "genre": "technology", 
  "datePublished": <%- post.date %>,
  "dateCreated": <%- post.date %>,
  "dateModified": <%- post.updated %>,
  "description": <%=post.desc%>,
  "articleBody": <%=post.desc%>,
    "author": {
      "@type": "Person",
      "name": "Lee Boonstra"
    }
  }
  </script>

  <div class="col col-sm-3">

      <aside id="sidebar" class="sidebar">
          <%- partial('_partial/sidebar', null, {cache: !config.relative_link}) %>
      </aside>

  </div>
</article>

<% if (!index && post.excerpt && list_related_posts){ %>
  <section id="related" class="related">
    <div class="col col-sm-9">
    <h2>Related Posts</h2>
    <%- list_related_posts({maxCount: 10, orderBy: 'random'}) %>
    </div><div class="col col-sm-3"></div>
  </section>
<% } %>

<% if (!index && post.comments && config.disqus_shortname){ %>
<section id="comments" class="comments">
  <div class="col col-sm-9">
    <h2>Comments</h2>
    <div id="disqus_thread">
      <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div>
  </div><div class="col col-sm-3"></div>
</section>
<% } %>