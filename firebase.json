{
  "hosting": {
    "public": "public",
    "ignore": [
      "**/.*",
      "**/node_modules/**",
      ".env"
    ],
    "headers": [ {
      "source" : "**/*.@(eot|otf|svg|ttf|ttc|woff|font.css)",
      "headers" : [ {
        "key" : "Access-Control-Allow-Origin",
        "value" : "*"
      } ]
    }, {
      "source" : "**/*.@(jpg|jpeg|ttf|svg|woff|eot|ico|gif|js|png)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=31557600"
      } ]
    }, 
    {
      "source" : "404.html|main.css",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=3600"
      } ]
    }]
  }
}

